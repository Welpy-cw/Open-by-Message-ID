{
  "manifest_version": 2,
  "name": "Open by Message-ID",
  "description": "Open links that may contain a Message-ID in several ways.",
  "version": "1.1.1",
  "author": "Hartmut Welpmann [:welpy-cw]",
  "browser_specific_settings": {
    "gecko": {
      "id": "welpy-cw.open-by-message-id@addons.thunderbird.net",
      "strict_min_version": "127.0",
      "strict_max_version": "128.*"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "accountsRead",
    "activeTab",
    "menus",
    "messagesRead",
    "storage"
  ],

  "experiment_apis": {
    "mailUtilsWrapper": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["mailUtilsWrapper"]],
        "script": "implementation.js"
      }
    }
  }
}
